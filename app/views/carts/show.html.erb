<h1>Your Cart</h1>

<% if notice %>
  <p><%= notice %></p>
<% end %>

<% current_cart.line_items.each do |line_item| %>
  <p><%= link_to line_item.item.title, item_path(line_item.item) %> | <%= "$%0.2f" % (line_item.item.price.to_f * line_item.quantity / 100) %> | Quantity: <%= line_item.quantity %> | <% if line_item.item.inventory < 5 %>
    <strong>There are only <%= line_item.item.inventory %> left in stock.</strong>
  <% end %> </p>
<% end %>

<p>Order total: <strong><%= "$%0.2f" % (current_cart.total.to_f / 100) %></strong> </p>
<%= button_to 'Checkout', checkout_path if current_cart.status.nil? %>
